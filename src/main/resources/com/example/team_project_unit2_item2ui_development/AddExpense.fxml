<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.team_project_unit2_item2ui_development.AddExpenseController">
    <padding><Insets bottom="30" left="40" right="40" top="30" /></padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Add Expense" />

    <HBox spacing="10">
        <Label text="Amount:" />
        <TextField fx:id="amountField" promptText="Enter amount" />
    </HBox>

    <HBox spacing="10">
        <Label text="Description:" />
        <TextField fx:id="descriptionField" promptText="Enter description" />
    </HBox>

    <HBox spacing="10">
        <Label text="Currency:" />
        <TextField fx:id="currencyField" promptText="USD" />
    </HBox>

    <HBox spacing="10">
        <Label text="Participants:" />
        <TextField fx:id="participantsField" promptText="Comma-separated usernames" />
    </HBox>

    <Button onAction="#handleAddExpense" text="Add" />
   <Button mnemonicParsing="false" onAction="#back" text="Back" />
</VBox>
