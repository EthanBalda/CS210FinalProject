<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="12" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.team_project_unit2_item2ui_development.AddExpenseController">
    <padding><Insets top="30" left="40" right="40" bottom="30"/></padding>

    <Label text="Add Expense" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Amount:"/>
        <TextField fx:id="amountField" promptText="Enter amount"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Description:"/>
        <TextField fx:id="descriptionField" promptText="Enter description"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Currency:"/>
        <TextField fx:id="currencyField" promptText="USD"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Participants:"/>
        <TextField fx:id="participantsField" promptText="Comma-separated usernames"/>
    </HBox>

    <Button text="Add" onAction="#handleAddExpense"/>
</VBox>
